<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/px_80"
    android:paddingRight="@dimen/px_80"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_old_pair_devices"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_80"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/bt_set_radiogroup_pair_text"
        android:textColor="@color/color_stytle_1"
        android:textSize="@dimen/bt_font_size_1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <View
        android:layout_width="@dimen/px_960"
        android:layout_height="@dimen/px_1"
        android:background="@mipmap/bt_contact_listview_divider"
        app:layout_constraintTop_toBottomOf="@+id/tv_old_pair_devices" />

    <ListView
        android:id="@+id/bt_pair_device_list"
        android:layout_width="@dimen/px_960"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:fadingEdge="none"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:scrollingCache="false"
        app:layout_constraintTop_toBottomOf="@+id/tv_old_pair_devices"></ListView>
</LinearLayout>
