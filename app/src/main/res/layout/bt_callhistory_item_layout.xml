<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_bt_callhistory_item"
    android:background="@drawable/bt_item_bg_image"
    android:layout_width="@dimen/px_960"
    android:layout_height="@dimen/px_83">

    <ImageView
        android:layout_marginTop="@dimen/px_26"
        android:layout_marginBottom="@dimen/px_26"
        android:id="@+id/iv_callhistory_type"
        android:layout_width="@dimen/px_30"
        android:layout_height="@dimen/px_32"
        android:gravity="center"
        android:src="@mipmap/bt_callhistory_item_dialed_numbers_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:includeFontPadding="false"
        android:id="@+id/tv_callhistory_user"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_82"
        android:layout_marginLeft="@dimen/px_41"
        android:gravity="center_vertical"
        android:text=" "
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/bt_callhistory_item_font_color"
        android:textSize="@dimen/bt_font_size_1"
        app:layout_constraintLeft_toRightOf="@id/iv_callhistory_type" />

    <TextView
        android:includeFontPadding="false"
        android:id="@+id/tv_callhistory_date"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_82"
        android:layout_marginRight="@dimen/px_29"
        android:gravity="center_vertical"
        android:text=""
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/bt_callhistory_item_font_a50_stytle_color"
        android:textSize="@dimen/bt_font_size_1"
        app:layout_constraintRight_toLeftOf="@id/tv_callhistory_time" />

    <TextView
        android:includeFontPadding="false"
        android:id="@+id/tv_callhistory_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_82"
        android:gravity="center_vertical"
        android:text=" "
        android:textColor="@color/bt_callhistory_item_font_a50_stytle_color"
        android:textSize="@dimen/bt_font_size_1"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@mipmap/telephone_number_bottom_image"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>