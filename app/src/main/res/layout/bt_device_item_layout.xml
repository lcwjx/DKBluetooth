<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/px_960"
        android:layout_height="@dimen/px_82"
        android:background="@drawable/bt_item_bg_image">

        <ImageView
            android:id="@+id/iv_device_pic"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_82"
            android:layout_marginLeft="@dimen/px_56"
            android:clickable="true"
            android:paddingBottom="24px"
            android:paddingTop="26px"
            android:src="@drawable/bt_set_device_pic_image"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_82"
            android:layout_marginLeft="30px"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxEms="20"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/bt_set_device_item_font_selector_style"
            android:textSize="@dimen/bt_font_size_1"
            app:layout_constraintLeft_toRightOf="@id/iv_device_pic" />

        <TextView
            android:id="@+id/tv_device_status"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_82"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="@color/bt_set_device_item_font_selector_style"
            android:textSize="@dimen/bt_font_size_1"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/iv_device_delete_button"
            android:layout_width="@dimen/px_70"
            android:layout_height="@dimen/px_82"
            android:clickable="true"
            android:gravity="center_vertical"
            android:src="@drawable/bt_set_devite_delete_image"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent" />
        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:background="@mipmap/bt_contact_listview_divider"-->
        <!--app:layout_constraintBottom_toBottomOf="parent" />-->

    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="@dimen/px_960"
        android:layout_height="@dimen/px_1"
        android:background="@mipmap/bt_contact_listview_divider" />

</LinearLayout>